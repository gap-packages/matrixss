#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.
# Modified for matrixss by Henrik B‰‰rnhielm 2004

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

build: build-stamp

build-stamp:
# Make sure we don't try to build code.tex, since it is included and since that
# would require buildman.pe
	touch doc/code.tex
# Make sure the GAP directory is set correctly, so that manualindex is found.
	$(MAKE) -C doc GAP=/usr/share/gap/
	gzip doc/manual.dvi
	gzip doc/manual.toc
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean
	dh_installdirs
	dh_install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs --exclude=INSTALL
	dh_link /usr/share/gap/pkg/matrixss/doc /usr/share/doc/gap-matrix-schreiersims/doc
	dh_installchangelogs 
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
